#!/usr/bin/env clitest --v0

$ printf "  X  \n"
!   X

$ printf "  X  \n"
?   X

$ printf "  X  \n"
? ^  X  $

$ printf "  X  \n"
!!!
  X
!!!

$ printf "  X  \n"
???
  X
???

$ printf "  X  \n"
???
^  X  $
???

$ printf "   X   \n"
%EXPECT_FAILURE
!   X

$ printf "   X   \n"
%EXPECT_FAILURE
?   X

$ printf "   X   \n"
%EXPECT_FAILURE
? ^  X  $

# Indented !!! blocks strip indentation from their interior lines to match
# Note that the empty line is actually empty (no indent)
$ printf "abc\n\ndef\n"
  !!!
  abc

  def
  !!!

$ printf "abc\n\ndef\n"
  """
  abc

  def
  """
