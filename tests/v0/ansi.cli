#!/usr/bin/env clitest --v0

# We can use \e reliably across platforms.

$ printf "\e[31mHello, world\e[0m\n"
! Hello, world

$ printf "\e[31mHello, world\e[0m\n"
? Hello, %{WORD}

# Not recommended, but valid
$ printf "\e[31mHello, world\e[0m\n"
? \e\[31mHello, world\e\[0m

# Ensure `set` works
set ANSI_COLORED "\e[31mHello, world\e[0m";

$ printf "$ANSI_COLORED\n"
! Hello, world

# Not recommended, but valid
$ printf "$ANSI_COLORED\n"
? \e\[31mHello, world\e\[0m
