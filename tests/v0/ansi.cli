#!/usr/bin/env clitest --v0

$ printf "\x1b[31mHello, world\x1b[0m\n"
! Hello, world

$ printf "\x1b[31mHello, world\x1b[0m\n"
? Hello, %{WORD}

# Not recommended, but valid
$ printf "\x1b[31mHello, world\x1b[0m\n"
? \x1b\[31mHello, world\x1b\[0m

# Ensure `set` works
set ANSI_COLORED "\x1b[31mHello, world\x1b[0m";

$ printf "$ANSI_COLORED\n"
! Hello, world

# Not recommended, but valid
$ printf "$ANSI_COLORED\n"
? \x1b\[31mHello, world\x1b\[0m
