#!/usr/bin/env clitest --v0

using tempdir;

defer {
    $ ls -1 $PWD
    ! file

    cd $TEMP_DIR;

    $ rm -rf $PWD/subdir

    $ pwd
    *
}

$ pwd
! %{PATH}

set TEMP_DIR $PWD;

$ mkdir subdir

# Avoid using `echo` because msys on Windows will munge the path
if TARGET_OS == "windows" {
    set PWD $PWD\subdir;
}

if TARGET_OS != "windows" {
    set PWD $PWD/subdir;
}

$ touch file
