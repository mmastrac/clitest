#!/usr/bin/env clitest --v0

set FOO bar;

$ echo $FOO
! bar

set A 1;
set B 2;

set FOO "$A $B";

$ echo $FOO
! 1 2

# The below lines match 'sh', not bash!
set VAR 'a\\b';
$ echo $VAR
if TARGET_OS != "windows" {
    ! a\b
}
if TARGET_OS == "windows" {
    ! a\\b
}

set VAR "a\\n";
$ echo $VAR
! a
!

set VAR "a\$b";

$ echo $VAR
! a$b

set VAR 'a\$b';

$ echo $VAR
! a\$b
