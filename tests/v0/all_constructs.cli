#!/usr/bin/env clitest --v0

#   - # <comment>
#   - $ <command>
#   - ? <grok pattern>
#   - ! <literal>
#   - repeat { ... }
#   - option { ... }
#   - choice { ... }
#   - unordered { ... }
#   - sequence { ... }
#   - ignore { ... }
#   - reject { ... }

$ printf "a\nb\nc\n"
repeat {
    # Any of these will do
    choice {
        ! a
        ! b
        ! c
    }
}

$ printf "a\nb\nc\n"
unordered {
    ! c
    ! a
    ! b
}

$ printf "a\nb\nc\n"
sequence {
    ! a
    sequence {
        ! b
        sequence {
            ! c
        }
    }
}

$ printf "a\nb\nc\n"
! a
optional {
    ! doesn't happen!!
}
! b
! c

$ printf "a\nWARNING: UH OH\nb\nc\n"
ignore {
    ? WARNING: %{DATA}
}
!!!
a
b
c
!!!

$ printf "hello\nworld\n"
repeat {
    choice {
        ! hello
        ! world
    }
}

$ printf "hello\nworld\n"
not {
    ! goodbye
}
! hello
! world
