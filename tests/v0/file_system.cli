#!/usr/bin/env clitest --v0

# Functional tests for project linking
# Key:
#   - # <comment>
#   - $ <command>
#   - ? <grok pattern>
#   - ! <literal>
#   - repeat { ... }
#   - option { ... }
#   - ignore { ... }
#   - choice { ... }
#   - unordered { ... }

pattern FILENAME [\w\-\.]+

using tempdir;

$ mkdir "testing-dir"

$ ls -a1
! .
! ..
! testing-dir

$ printf "hello world\n" > testing-dir/file1
$ printf "world\n" > testing-dir/file2

$ ls -a1 testing-dir
!!!
.
..
file1
file2
!!!

$ ls -1 "testing-dir/"*
!!!
testing-dir/file1
testing-dir/file2
!!!

# Test with a pattern that matches a filename
$ ls -a1 testing-dir
repeat {
    ! %{FILENAME}
}

# Test with a pattern that matches a filename
$ ls -a1 testing-dir 1>&2
repeat {
    ! %{FILENAME}
}
